<Project>
  <!-- Defaults mirror 1.3.1 behavior -->
  <PropertyGroup>
    <Xml2Doc_Enabled>true</Xml2Doc_Enabled>

    <!-- Output mode: default is per-type (false) -->
    <Xml2Doc_SingleFile>false</Xml2Doc_SingleFile>

    <!-- Per-type output default -->
    <Xml2Doc_OutputDir>$(MSBuildProjectDirectory)\docs</Xml2Doc_OutputDir>

    <!-- Single-file output default -->
    <Xml2Doc_OutputFile>$(MSBuildProjectDirectory)\docs\api.md</Xml2Doc_OutputFile>

    <!-- Rendering knobs -->
    <Xml2Doc_FileNameMode>clean</Xml2Doc_FileNameMode>
    <!-- verbatim|clean -->
    <Xml2Doc_RootNamespaceToTrim></Xml2Doc_RootNamespaceToTrim>
    <Xml2Doc_CodeBlockLanguage>csharp</Xml2Doc_CodeBlockLanguage>

    <!-- Report + incremental -->
    <Xml2Doc_ReportPath>$(IntermediateOutputPath)xml2doc-report.json</Xml2Doc_ReportPath>
    <Xml2Doc_OutputStamp>$(IntermediateOutputPath)xml2doc.stamp</Xml2Doc_OutputStamp>
    <Xml2Doc_FingerprintFile>$(IntermediateOutputPath)xml2doc.fingerprint.txt</Xml2Doc_FingerprintFile>

    <!-- Optional behavior switches -->
    <Xml2Doc_DryRun>false</Xml2Doc_DryRun>
    <Xml2Doc_Diff>false</Xml2Doc_Diff>
  </PropertyGroup>
</Project>
